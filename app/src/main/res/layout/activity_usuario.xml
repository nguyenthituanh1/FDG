<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondousuario"
    android:padding="10dp" >



        <ImageView
            android:id="@+id/viewImage"
            android:layout_width="185dp"
            android:layout_height="120dp"
            android:src="@drawable/usuario"
            android:layout_above="@+id/btnSelectPhoto"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btnSelectPhoto"
            android:layout_width="200dp"
            android:layout_height="81dp"
            android:text="Seleccionar foto"
            style="@android:style/ButtonBar"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/viewImage"
            android:layout_alignEnd="@+id/viewImage"
            android:textColor="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:id="@+id/button5"
        android:onClick="guardar"

        style="@android:style/ButtonBar"
        android:layout_below="@+id/btnSelectPhoto"
        android:layout_marginTop="52dp"
        android:textColor="#ffffffff"
        android:layout_alignRight="@+id/btnSelectPhoto"
        android:layout_alignEnd="@+id/btnSelectPhoto"
        android:layout_alignLeft="@+id/viewImage"
        android:layout_alignStart="@+id/viewImage" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Usuario"
        android:ems="10"
        android:id="@+id/editText"
        android:autoText="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff" />


</RelativeLayout>